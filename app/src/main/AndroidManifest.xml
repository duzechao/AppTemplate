<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="github.dzc.apptemplate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".recyclerview.RecyclerViewActivity"
            android:label="@string/title_activity_recycler_view" />
        <activity android:name=".recyclerview.RecyclerViewDifferentViewTypeActivity" />
        <activity android:name=".PopupWindowActivity" />
        <activity android:name=".fragment.FragmentActivity" />
        <activity android:name=".fragment.FragmentTestActivity" />
        <activity android:name=".recyclerview.CoordinatorLayoutActivity" />
        <activity android:name=".lollianimation.Animation1Activity" />
        <activity android:name=".lollianimation.Animation2Activity"></activity>
    </application>

</manifest>